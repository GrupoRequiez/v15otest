<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="upload_location_detail_view" model="ir.ui.view">
      <field name="name">upload.location.detail.view</field>
      <field name="model">upload.location.detail</field>
      <field name="arch" type="xml">
        <form string="Upload tracking reference">
          <sheet>
              <group>
                <field invisible="1" name="getted"/>
                <field name="data_file" attrs="{'invisible':[('getted','=',True)]}"/>
                <field name="name" invisible="1"/>
              </group>
              <footer>
                <button name="confirm" string="Confirm" attrs="{'invisible':[('getted','=',True)]}" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="oe_link" special="cancel"/>
              </footer>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_upload_location_detail" model="ir.actions.act_window">
      <field name="name">Upload Location detail</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">upload.location.detail</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="view_id" ref="upload_location_detail_view"/>
    </record>

    <menuitem id="menu_location_detail" parent="product_locations.menu_product_location_admin" action="action_upload_location_detail" sequence="61"/>
  </data>
</odoo>
